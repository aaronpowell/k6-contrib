datasource sqlite {
  url      = env("DATABASE_URL")
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model Post {
  id               String    @id @default(cuid())
  title            String?
  status           String?
  content          String?
  image_filesize   Int?
  image_extension  String?
  image_width      Int?
  image_height     Int?
  image_id         String?
  image_sizesMeta  Json?
  image2_filesize  Int?
  image2_extension String?
  image2_width     Int?
  image2_height    Int?
  image2_id        String?
  image2_sizesMeta Json?
  publishDate      DateTime?
  author           Author?   @relation("Post_author", fields: [authorId], references: [id])
  authorId         String?   @map("author")

  @@index([authorId])
}

model Author {
  id    String  @id @default(cuid())
  name  String?
  email String? @unique
  posts Post[]  @relation("Post_author")
}